<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vashisthg.guiorgy.demo.MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/twoway_seek_bar_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/twoway_seek_bar_label"/>

    <com.vashisthg.guiorgy.TwowaySeekBar
        android:id="@+id/twoway_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        custom:minValue="-50.0"
        custom:maxValue="50.0"
        android:progress="0"
        android:thumb="@android:drawable/gallery_thumb"
        custom:defaultBackgroundColor="@color/default_background_color"
        custom:defaultBackgroundRangeColor="@color/default_background_range_color"/>

    <TextView
        android:id="@+id/start_seek_bar_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/start_seek_bar_label"/>

    <SeekBar
        android:id="@+id/start_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:min="-50"
        android:max="50"
        android:progress="0"/>

    <TextView
        android:id="@+id/min_seek_bar_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/min_seek_bar_label"/>

    <SeekBar
        android:id="@+id/min_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:min="-50"
        android:max="50"
        android:progress="-50"/>

    <TextView
        android:id="@+id/max_seek_bar_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/max_seek_bar_label"/>

    <com.vashisthg.guiorgy.demo.ReversedSeekBar
        android:id="@+id/max_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:min="-50"
        android:max="50"
        android:progress="50"/>

    <Button
        android:id="@+id/set_random_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/set_random_btn"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
